{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    //   "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@*": [
        "src/*"
      ],
      "@@packages/api": [
        "../../packages/api/src"
      ],
      "@@packages/assets": [
        "../../packages/assets"
      ],
      "@@packages/components": [
        "../../packages/components/src/index.tsx"
      ],
      "@@packages/context": [
        "../../packages/context/src/index.ts"
      ],
      "@@packages/core": [
        "../../packages/core/src/index.ts"
      ],
      "@@packages/hooks": [
        "../../packages/hooks/src/index.ts"
      ],
      "@@packages/layouts": [
        "../../packages/layouts/src/index.tsx"
      ],
      "@@packages/utils": [
        "../../packages/utils/src/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "../../vite.config"
  ],
}